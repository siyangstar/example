<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <com.cqsynet.swifi.view.TitleBar
        android:id="@+id/titlebar_activity_edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:showLeftIcon="true"
        titlebar:rightIcon="@drawable/btn_enter_selector"
        titlebar:showRightIcon="true" />
    <!-- 省份 -->

    <TextView
        android:id="@+id/tvProvince_activity_edit_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_large"
        android:hint="请选择省份" 
        android:background="@drawable/news_item_bg_selector"/>
        
        <!-- 城市 -->
        
	<View
        android:layout_height="1px"
	    android:layout_width="match_parent"
	    android:background="@color/line" />
	
    <TextView
        android:id="@+id/tvCity_activity_edit_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_large"
        android:hint="请选择城市" 
        android:background="@drawable/news_item_bg_selector"/>
    
        <!-- 区县 -->
        
	<View
        android:layout_height="1px"
	    android:layout_width="match_parent"
	    android:background="@color/line" />
	
    <TextView
        android:id="@+id/tvCounty_activity_edit_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_large"
        android:hint="请选择区县" 
        android:background="@drawable/news_item_bg_selector"/>
    
	<View
        android:layout_height="1px"
	    android:layout_width="match_parent"
	    android:background="@color/line" />
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text4"
        android:textSize="@dimen/text_size_medium"
        android:text="请从上往下依次选择" />

</LinearLayout>